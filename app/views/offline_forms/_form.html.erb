<%= form_for(@offline_form, :html => {class: 'form-horizontal'}) do |f| %>
  <%= render "layouts/error_messages", :f => @offline_form %>

	<fieldset>
    <legend>Customize the Offline Message Form</legend>

		<div class="form-group">
			<label class="col-md-4 control-label"><%= f.label :intro_text %></label>
			<div class="col-md-8">
        <%= f.text_area :intro_text, :class => "form-control", :rows => 4  %>
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-4 control-label"><%= f.label :name_text %></label>
			<div class="col-md-8">
        <%= f.text_field :name_text, :class => "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-4 control-label"><%= f.label :email_text %></label>
			<div class="col-md-8">
        <%= f.text_field :email_text, :class => "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-4 control-label"><%= f.label :email_enabled, "Display email field" %></label>
			<div class="col-md-8">
        <%= f.check_box :email_enabled, :class => "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-4 control-label"><%= f.label :department_text %></label>
			<div class="col-md-8">
        <%= f.text_field :department_text, :class => "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-4 control-label"><%= f.label :department_enabled, "Display department field" %></label>
			<div class="col-md-8">
        <%= f.check_box :department_enabled, :class => "form-control" %>
			</div>
		</div>    
		<div class="form-group">
			<label class="col-md-4 control-label"><%= f.label :message_text %></label>
			<div class="col-md-8">
        <%= f.text_field :message_text, :class => "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-4 control-label"><%= f.label :button_text %></label>
			<div class="col-md-8">
        <%= f.text_field :button_text, :class => "form-control" %>
			</div>
		</div>
  </fieldset>
	<footer>
    <%= f.submit "Update", :class => "btn btn-primary" %>
	</footer>
<% end %>
