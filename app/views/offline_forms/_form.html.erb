<%= form_for(@offline_form, :html => {class: 'form-horizontal'}) do |f| %>
  <%= render "layouts/error_messages", :f => @offline_form %>

  <header></header>
	<fieldset>
		<div class="form-group">
			<label class="col-md-4 control-label"><%= f.label :intro_text, "Introduction" %></label>
			<div class="col-md-8">
        <%= f.text_area :intro_text, :class => "form-control", :rows => 4  %>
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-4 control-label"><%= f.label :name_text, "Name Field" %></label>
			<div class="col-md-8">
        <%= f.text_field :name_text, :class => "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="col-md-4 control-label"><%= f.label :email_text, "Email Field" %></label>
			<div class="col-md-8">
        <%= f.text_field :email_text, :class => "form-control" %>
        <div class="help-text" style="font-size: 10px;">
          <label>
            <%= f.check_box :email_enabled, :style => "height: 12px;" %>
            &nbsp;Display Email Field
          </label>
        </div>
			</div>
    </div>
		<div class="form-group">
			<label class="col-md-4 control-label"><%= f.label :department_text, "Department Field" %></label>
			<div class="col-md-8">
        <%= f.text_field :department_text, :class => "form-control" %>
        <div class="help-text" style="font-size: 10px;">
          <label>
            <%= f.check_box :department_enabled, :style => "height: 12px;" %>
            &nbsp;Display Department Field
          </label>          
        </div>
			</div>
		</div>

		<div class="form-group">
			<label class="col-md-4 control-label"><%= f.label :message_text, "Your Question Field" %></label>
			<div class="col-md-8">
        <%= f.text_field :message_text, :class => "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label class="col-md-4 control-label"><%= f.label :button_text, "Send Message Button" %></label>
			<div class="col-md-8">
        <%= f.text_field :button_text, :class => "form-control" %>
			</div>
		</div>
  </fieldset>
  <hr>
	<footer>
    <%= f.submit "Save Changes", :class => "btn btn-primary", :name => "save_changes" %>
    <%= f.submit "Restore Defaults", :class => "btn btn-danger", :name => "restore_defaults" %>
    <%= f.submit "Cancel Changes", :class => "btn btn-default", :name => "cancel_changes" %>
	</footer>
  <hr>
<% end %>

