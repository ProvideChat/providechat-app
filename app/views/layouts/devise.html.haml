!!! 5
%html{lang: "en"}
  %head
    %title Provide Chat App

    %meta{charset: "utf-8"}
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no'}
    %meta{name: "description", content: "Provide Chat Application"}
    %meta{name: "author", content: "Provide Chat software"}

    = stylesheet_link_tag    "application", media: "screen"

    = favicon_link_tag 'favicon.ico'

    = csrf_meta_tags

    %link{href: "https://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,300,400,700", rel: "stylesheet"}

  %body{:class => "animated fadeInDown"}

    %header#header{:class => "login-header"}
      #logo-group
        %span#logo
          = image_tag "logo.png", alt: "Provide Chat"

      .pull-right{style: "padding-top: 6px;"}
        - if controller_name != 'registrations'
          .btn-header.transparent.pull-right
            .hidden-md.hidden-lg
              = link_to new_registration_path(:agent), class: "btn btn-danger btn-sm" do
                %i.fa.fa-user-plus
            .hidden-sm.hidden-xs
              = link_to new_registration_path(:agent), class: "btn btn-danger btn-sm" do
                %i.fa.fa-user-plus
                &nbsp;Sign Up
        - if controller_name != 'sessions'
          .btn-header.transparent.pull-right
            .hidden-md.hidden-lg
              = link_to new_session_path(:agent), class: "btn btn-danger btn-sm" do
                %i.fa.fa-sign-in
            .hidden-sm.hidden-xs
              = link_to new_session_path(:agent), class: "btn btn-danger btn-sm" do
                %i.fa.fa-sign-in
                &nbsp;Sign in
        .btn-header.transparent.pull-right
          .hidden-md.hidden-lg
            = link_to new_contact_form_path, class: "btn btn-primary btn-sm" do
              %i.fa.fa-paper-plane
          .hidden-sm.hidden-xs
            = link_to new_contact_form_path, class: "btn btn-primary btn-sm" do
              %i.fa.fa-paper-plane
              &nbsp;Contact Us

    #main
      #content.container
        .row
          .col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
            = yield

        .row
          .col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
            .alert.alert-info
              %h4 Are you a Provide Chat Classic user?
              %p
                = link_to "Click here to sign in to Provide Chat Classic", "http://www.providechat.com/dashboard"

    #termsModal.modal.fade{"aria-hidden": "true", "aria-labelledby": "TermsOfService", tabindex: "-1"}
      .modal-dialog
        .modal-content
    #privacyModal.modal.fade{"aria-hidden": "true", "aria-labelledby": "Privacy", tabindex: "-1"}
      .modal-dialog
        .modal-content

    = javascript_include_tag 'application'

    = yield(:scripts).present? ? yield(:scripts) : render(partial: 'layouts/scripts')

