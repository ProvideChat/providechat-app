      }
      if ((e.which === 17)) {
        $.ctrldown = true;
      }
    };
  }

  function make_keyUp (e, chatId) {
    return function (e) {
      if (e.which == 16) {
        $.shiftdown = false;
      }
      if ((e.which == 17)) {
        $.ctrldown = false;
      }

      if ((e.which === 13) && (($.shiftdown === true) || ($.ctrldown === true))) {
        $("#txt_message"+chatId).value += "\n";
      }
      else if (e.which == 13) {
        sendChatText( chatId );
        updateKeypress(chatId, 'no');
      } else {
        updateKeypress(chatId, 'yes');
      }

      e = null;
    };
