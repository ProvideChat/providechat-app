<div class="row">
	<div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
		<div class="well no-padding">
      <h2>Start using Provide Chat for free!</h2>

      <p>5 minute setup, no credit card required to begin your 14 day trial</p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: "smart-form client-form", id: "smart-form-register"}) do |f| %>

        <%= devise_error_messages! %>

      	<fieldset>

      		<section>
      			<label class="input"> <i class="icon-append fa fa-envelope"></i>
      				<%= f.email_field :email, autofocus: true, :placeholder => "Email address" %>
      				<b class="tooltip tooltip-bottom-right">Needed to verify your account</b> </label>
      		</section>

      		<section>
      			<label class="input"> <i class="icon-append fa fa-lock"></i>
              <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
      				<b class="tooltip tooltip-bottom-right">Don't forget your password</b> </label>
      		</section>

      	</fieldset>
      	<fieldset>
      		<section>
            By signing up I agree to the <a href="#" data-toggle="modal" data-target="#myModal"> terms & conditions</a> and <a href="#" data-toggle="modal" data-target="#myModal"> privacy policy</a>.

      		</section>
      	</fieldset>
      	<footer>
      		<button type="submit" class="btn btn-primary">
      			Start my free trial
      		</button>
      	</footer>

      	<div class="message">
      		<i class="fa fa-check"></i>
      		<p>
      			Thank you for your registration!
      		</p>
      	</div>
      <% end %>
    </div>
  </div>
</div>
