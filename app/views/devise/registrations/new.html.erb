<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: "smart-form client-form", id: "smart-form-register"}) do |f| %>

  <%= devise_error_messages! %>

	<fieldset>

		<section>
			<label class="input"> <i class="icon-append fa fa-envelope"></i>
				<%= f.email_field :email, autofocus: true, :placeholder => "Email address" %>
				<b class="tooltip tooltip-bottom-right">Needed to verify your account</b> </label>
		</section>

		<section>
			<label class="input"> <i class="icon-append fa fa-lock"></i>
        <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
				<b class="tooltip tooltip-bottom-right">Don't forget your password</b> </label>
		</section>

		<section>
			<label class="input"> <i class="icon-append fa fa-lock"></i>
        <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirm password" %>
				<b class="tooltip tooltip-bottom-right">Don't forget your password</b> </label>
		</section>
	</fieldset>
	<fieldset>
		<section>
			<label class="checkbox">
				<input type="checkbox" name="subscription" id="subscription">
				<i></i>I want to receive news and special offers</label>
			<label class="checkbox">
				<input type="checkbox" name="terms" id="terms">
				<i></i>I agree with the <a href="#" data-toggle="modal" data-target="#myModal"> Terms and Conditions </a></label>
		</section>
	</fieldset>
	<footer>
		<button type="submit" class="btn btn-primary">
			Register
		</button>
	</footer>

	<div class="message">
		<i class="fa fa-check"></i>
		<p>
			Thank you for your registration!
		</p>
	</div>

<% end %>

