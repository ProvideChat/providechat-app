<div class="well no-padding">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: "smart-form client-form", id: "smart-form-register"}) do |f| %>

  	<header>
      Start using Provide Chat for free!
  	</header>

    <%= devise_error_messages! %>

		<fieldset>
      <legend>5 minute setup, no credit card required to begin your 14 day trial</legend>
			
			<section>
				<label class="label">E-mail</label>
				<label class="input"> <i class="icon-append fa fa-user"></i>
          <%= f.email_field :email, autofocus: true, :placeholder => "Email address" %>
					<b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter email address</b></label>
			</section>

			<section>
				<label class="label">Password</label>
				<label class="input"> <i class="icon-append fa fa-lock"></i>
          <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
					<b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Enter your password</b> </label>
				<div class="note">
					<a href="forgotpassword.html">Forgot password?</a>
				</div>
			</section>

			<section>
				<label class="checkbox">
					<input type="checkbox" name="remember" checked="">
					<i></i>Stay signed in</label>
			</section>
		</fieldset>
  	<fieldset>
  		<section>
        By signing up I agree to the <a href="#" data-toggle="modal" data-target="#myModal"> terms & conditions</a> and <a href="#" data-toggle="modal" data-target="#myModal"> privacy policy</a>.

  		</section>
  	</fieldset>  
		<footer>
			<button type="submit" class="btn btn-primary">
				Start my free trial
			</button>
		</footer>
  <% end %>

</div>
              
	
