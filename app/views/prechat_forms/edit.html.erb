<div class="row">
	<div class="col-md-12 col-lg-8">
		<h1 class="page-title txt-color-blueDark">
      Chat Widget <i class="fa fa-angle-double-right"></i> Pre-chat Survey for
      <%= form_tag(prechat_forms_path, method: 'get', class: 'smart-form form-inline', id: 'edit_prechat_form', style: 'display: inline;') do %>
        <%= select_tag "website_id", options_from_collection_for_select(@websites, "id", "url", @prechat_form.website_id), :class => "select2", :id => "website_id", :style => "max-width: 300px; margin-top: -5px;"  %>
      <% end %>
    </h1>
	</div>
</div>

<%= render partial: 'layouts/flash_messages', flash: flash %>

<div class="row">

  <% if @prechat_form %>

    <div class="col-sm-12 col-md-12 col-lg-12">
      <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
        <header>
          <span class="widget-icon"> <i class="fa fa-toggle-up"></i> </span>
          <h2>Pre-chat Survey</h2>
        </header>

				<div>
					<div class="widget-body no-padding">
            <div class="alert alert-info no-margin fade in">
              <div style="float: left;">
                <i class="fa-fw fa fa-info"></i>
              </div>
              <div style="margin-left: 24px;">
                This is the form your visitor completes before they initiate a chat with you.
              </div>
            </div>
            <div class="form-container">
              <div class="col-sm-12 col-sm-5 col-lg-6">
                <%= render 'form' %>
              </div>
              <div class="col-sm-12 col-md-7 col-lg-6">
                <%= render 'pre_chat' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  <% else %>

    <div class="col-sm-12 col-md-8 col-lg-8">

      <div class="alert alert-warning alert-block">
        <h4 class="alert-heading">No websites configured yet!</h4>

        You have no yet added any websites, please <%= link_to "add a website", new_website_path %>
        to customize the pre-chat survey for that website.
      </div>

    </div>
  <% end %>

</div>

<script>
  function initialize_website_dropdown() {
    $('#website_id').on ('change', function() {
      $('#edit_prechat_form').submit();
    });
  }

  $( document ).ready(function() {
    initialize_website_dropdown();
  });

  $(window).bind('page:change', function() {
    initialize_website_dropdown();
  });
</script>


