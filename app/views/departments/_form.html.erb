<%= form_for(@department, :html => {class: 'form-horizontal'}) do |f| %>
  <% if @department.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@department.errors.count, "error") %> prohibited this agent from being saved:</h2>

      <ul>
      <% @department.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
	<fieldset>

		<div class="form-group">
			<label class="col-md-4 control-label"><%= f.label :name %></label>
			<div class="col-md-8">
        <%= f.text_field :name, :class => "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-4 control-label"><%= f.label :email %></label>
			<div class="col-md-8">
        <%= f.text_field :email, :class => "form-control" %>
			</div>
		</div>
    <div class="form-group">
      <label class="col-md-4 control-label"><%= f.label :status %></label>
      <div class="col-md-8">
        <%= f.select :status, { "Enabled" => "enabled", "Disabled" => "disabled"}, :class => "form-control" %>
      </div>
    </div>
  </fieldset>
	<footer>
    <%= f.submit "Submit", :class => "btn btn-primary" %>
    <%= link_to "Back", departments_path, :class => "btn btn-default" %>
	</footer>  

<% end %>
