<%= render 'layouts/page_header', :title => 'Departments', :icon => 'fa-sitemap' %>

<div id="content">
  <div class="row">

	  <article class="col-sm-12 col-md-12 col-lg-6">

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Organization</th>
            <th>Name</th>
            <th>Email</th>
            <th>Status</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @departments.each do |department| %>
            <tr>
              <td><%= department.organization_id %></td>
              <td><%= department.name %></td>
              <td><%= department.email %></td>
              <td><%= department.status %></td>
              <td><%= link_to 'Edit', edit_department_path(department) %></td>
              <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Department', new_department_path %>
    </article>
  </div>
</div>