= form_for(@organization, :html => {class: 'form-horizontal'}) do |f|
  - if @organization.errors.any?
    #error_explanation
      %h2
        = pluralize(@organization.errors.count, "error")
        prohibited this organization from being saved:
      %ul
        - @organization.errors.full_messages.each do |message|
          %li= message
  %fieldset
    .form-group
      %label.col-md-4.control-label Main Email
      .col-md-8
        = f.text_field :email, :class => "form-control"
    .form-group
      %label.col-md-4.control-label= f.label :agent_session_timeout
      .col-md-8
        = f.select :agent_session_timeout, @organization.agent_session_timeouts, {}, {:class => "form-control"}
    .form-group
      %label.col-md-4.control-label= f.label :agent_response_timeout
      .col-md-8
        = f.select :agent_response_timeout, @organization.agent_response_timeouts, {}, {:class => "form-control"}
  %footer= f.submit "Save Settings", :class => "btn-lg btn-primary"