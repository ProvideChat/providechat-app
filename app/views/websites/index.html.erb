<%= render 'layouts/page_header', :title => 'Settings', :icon => 'fa-sitemap', :subpage => 'New Website' %>

<div class="row">

  <article class="col-sm-12 col-md-12 col-lg-12">

    <div class="jarviswidget" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
    	<header>
    		<span class="widget-icon"> <i class="fa fa-plus-square-o"></i> </span>
    		<h2>Websites</h2>
    	</header>

			<div>

				<div class="jarviswidget-editbox">
					<!-- This area used as dropdown edit box -->

				</div>

				<div class="widget-body">

          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Url</th>
                <th>Name</th>
                <th>Logo</th>
                <th>Status</th>
                <th colspan="2"></th>
              </tr>
            </thead>

            <tbody>
              <% @websites.each do |website| %>
                <tr>
                  <td><%= website.url %></td>
                  <td><%= website.name %></td>
                  <td><%= website.logo %></td>
                  <td>
                    <%= "<span class='label label-success'>#{website.status.capitalize}</span>".html_safe if website.status == 'enabled' %>
                    <%= "<span class='label label-warning'>#{website.status.capitalize}</span>" if website.status == 'disabled' %>
                  </td>
                  <td>
                    <%= link_to 'Edit', edit_website_path(website), :class => "btn btn-default" %>
                  </td>
                  <td>
                    <%= link_to 'Delete', website, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
                  </td>
                </tr>
              <% end %>
              <% if @websites.count == 0 %>
                <tr>
                  <td colspan="7">No websites configured</td>
                </tr>
              <% end %>          
            </tbody>
          </table>

          <br>

          <%= link_to 'New Website', new_website_path, :class => "btn btn-primary" %>

        </div>
      </div>
    </div>
  </article>  
</div>
