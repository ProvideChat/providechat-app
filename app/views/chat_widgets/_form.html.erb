
<%= form_for(@chat_widget, :html => {class: 'form-horizontal', id: 'update-widget'}) do |f| %>
  <%= render "layouts/error_messages", :f => @chat_widget %>

  <header></header>
	<fieldset>

    <legend>Customize Language</legend>

		<div class="form-group">
			<label class="col-md-4 control-label"><%= f.label :online_message, "Online - Widget Closed" %></label>
			<div class="col-md-8">
        <%= f.text_field :online_message, :class => "form-control", :placeholder => @chat_widget.online_message %>
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-4 control-label"><%= f.label :offline_message, "Offline - Widget Closed" %></label>
			<div class="col-md-8">
        <%= f.text_field :offline_message, :class => "form-control", :placeholder => @chat_widget.offline_message %>
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-4 control-label"><%= f.label :title_message, "Titlebar Message" %></label>
			<div class="col-md-8">
        <%= f.text_field :title_message, :class => "form-control", :placeholder => @chat_widget.title_message %>
			</div>
		</div>
  </fieldset>
  <fieldset>
    <legend>Customize Look</legend>
		<div class="form-group">
			<label class="col-md-4 control-label"><%= f.label :color, "Widget Color" %></label>
			<div class="col-md-8">
        <%= f.select :color, ChatWidget.color_options, {}, {:id => "color-picker", :class => "form-control"}  %>
			</div>
		</div>

    <div class="form-group">
			<label class="col-md-3 control-label"></label>
			<div class="col-md-9">
				<div class="checkbox">
					<label>
						<%= f.check_box :display_logo %>
						Display logo </label>
				</div>
				<div class="checkbox">
					<label>
            <%= f.check_box :display_agent_avatar %>
            <i></i>Display agent's avatar</label>
				</div>
				<div class="checkbox">
					<label>
            <%= f.check_box :hide_when_offline %>
            <i></i>Hide widget when all operators are offline</label>
				</div>
			</div>
		</div>

  </fieldset>
  <hr>
	<footer>
    <%= f.submit "Save Changes", :class => "btn btn-primary" %>
    <%= f.submit "Restore Defaults", :class => "btn btn-danger" %>
    <%= f.submit "Cancel", :class => "btn btn-default" %>
	</footer>

<% end %>

<script>
$(function() {
  $('select[name="chat_widget[color]"]').colourPicker({
    ico: '<%= image_path "color-picker.png" %>',
    title: false,
    inputBG: true
  });
});

 </script>
