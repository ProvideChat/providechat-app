
<%= form_for(@chat_widget, :html => {class: 'smart-form', id: 'update-widget'}) do |f| %>
  <% if @chat_widget.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@chat_widget.errors.count, "error") %> prohibited this chat_widget from being saved:</h2>

      <ul>
      <% @chat_widget.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <header>Customize Language</header>
	<fieldset>
  	<div class="row">
  		<section class="col col-12">
  			<label class="input">
          <%= f.text_field :online_message, :placeholder => @chat_widget.online_message %>
  			</label>
  		</section>
    </div>
    <div class="row">
  		<section class="col col-12">
  			<label class="input">
          <%= f.text_field :offline_message, :placeholder => @chat_widget.offline_message %>
  			</label>
  		</section>
  	</div>
    <div class="row">
  		<section class="col col-12">
  			<label class="input">
          <%= f.text_field :title_message, :placeholder => @chat_widget.title_message %>
  			</label>
  		</section>
  	</div>					
  </fieldset>
  <header>Customize Look</header>
  <fieldset>
    <div class="row">
  		<section class="col col-12">
        <label class="input">
    			<div class="input-group col-xs-4 color">
            <%= f.text_field :color, :placeholder => @chat_widget.color, :class => "form-control"  %>
            <span class="input-group-addon"><i></i></span>   
          </div>
        </label>
  		</section>
  	</div>
		<section>
			<label class="checkbox">
        <%= f.check_box :display_logo, :class => "form-control" %>
				<i></i>Display logo</label>
			<label class="checkbox">
        <%= f.check_box :display_agent_avatar, :class => "form-control" %>
				<i></i>Display agent's avatar</label>
			<label class="checkbox">
        <%= f.check_box :hide_when_offline, :class => "form-control" %>
				<i></i>Hide widget when all operators are offline</label>
		</section>
    
  
  </fieldset>
	<footer>
    <%= f.submit "Update", :class => "btn btn-primary" %>
	</footer>
  
<% end %>

<script>

 $('.color').colorpicker();
 
 </script>
