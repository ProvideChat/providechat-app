.widget-preview-container
  #pc-chat-window{:style => "display: block;"}
    .chat-widget.chat-widget-open{:style => "background-color: \##{@chat_widget.color}; border-color: \##{@chat_widget.color};"}
      .chat-widget-header
        = @chat_widget.title_message
        %div{:style => "float: right; margin-right: 10px;"}
          = image_tag "widget/down-arrow.png", id: "close-chat-widget"
          = image_tag "widget/close.png", id: "end-chat"
          
      #chat-widget-content
        #in-chat
          .chat-widget-container
            .agent-area
              %div{id: "agent-image-container"}
                = image_tag current_agent.avatar_url, :id => "agent-image"
              %div{:style => "float: left; margin-left: 10px;"}
                %p#agent-name{:style => "font-weight: bold; font-size: 16px; margin-top: 0px;"}
                  = current_agent.display_name
              %div{id: "logo-image-container"}
                = image_tag(@chat_widget.logo_url) if @chat_widget.logo? && @chat_widget.display_logo?

            .invitation-message-area
              %div{:style => "margin: 30px 10px; font-family: arial, verdana, helvetica; font-size: 14px;"}
                %h3= @invitation.invitation_message
                
                %div{:style => "width: 320px; margin: 0px auto;"}
                  %input#start-chat-text-box-1{:placeholder => @invitation.name_text, :type => "text", style: "height: 40px; width: 200px;"}
              
                  %input#start-chat-btn{:style => "color: #333333; font-family: arial, verdana, helvetica; font-size: 12px; height: 40px; width: 110px;", :type => "submit", :value => "  #{@invitation.button_text}  "}/

      .chat-widget-footer
        %a{:href => "http://www.providechat.com/", :style => "color: #EEEEEE;"} Live Chat Software
        powered by Provide Chat.