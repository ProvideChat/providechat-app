.row
  .col-xs-12.col-sm-10.col-md-8.col-lg-8
    %h1.page-title.txt-color-blueDark
      Chat Widget
      %i.fa.fa-angle-double-right
      Invitations for
      = form_tag(chat_widgets_path, method: 'get', class: 'smart-form form-inline', id: 'edit_chat_widget', style: 'display: inline;') do
        = select_tag "website_id", options_from_collection_for_select(@websites, "id", "url", @invitation.website_id), :class => "select2", :id => "website_id", :style => "max-width: 300px; margin-top: -5px;"

= render partial: 'layouts/flash_messages', flash: flash

.row
  - if @invitation
    .col-sm-12.col-md-8.col-lg-8
      #wid-id-0.jarviswidget.jarviswidget-color-darken
        %header
          %span.widget-icon
            %i.fa.fa-toggle-up
          %h2 Customize Invitations
        %div
          .widget-body
            .alert.alert-info.no-margin.fade.in
              %i.fa-fw.fa.fa-info
              When enabled, every visitor on your website will receive an invitation to chat with one of your operators after a predefined period of time or page views.
            %br
            = render 'form'
  - else
    .col-sm-12.col-md-8.col-lg-8
      .alert.alert-warning.alert-block
        %h4.alert-heading No websites configured yet!
        You have no yet added any websites, please #{link_to "add a website", new_website_path}
        to customize the invitations for that website.

:javascript
  $(function() {
    $('#website_id').on ('change', function() {
      $('#edit_invitations').submit();
    });
  });