%article.col-sm-12.chat-transcripts
  .jarviswidget.jarviswidget-color-blueDark
    %header{:role => "heading"}

      %span.widget-icon
        %i.fa.fa-table
      %h2 Chat Transcript Search Results
      %span.jarviswidget-loader
        %i.fa.fa-refresh.fa-spin
    %div{:role => "content"}
      .jarviswidget-editbox
      .widget-body.no-padding
        .table-responsive
          %table.table.table-striped.table-bordered.table-hover
            %thead
              %tr
                %th Ticket ID
                %th Agent
                %th Website
                %th Visitor Name
                %th Chat Accepted
                %th Department
            %tbody
              = render(@chats) || render('no_chats')


#ajax-modal.modal.fade{:tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
        %h3.modal-title Chat Transcript
      .modal-body.chat-transcript-modal-body
        .modal-body-content
        .ajax-loader
          loading....
      .modal-footer
        %button.btn{"data-dismiss" => "modal", :type => "button"} Close

:javascript

  $('tr').click( function() {
    //window.location = $(this).find('a').attr('href');
    $(this).find('a').click();
  });


