<%= form_for @agent, url: wizard_path do |f| %>
  <% if @agent.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@agent.errors.count, "error") %> prohibited this agent from being saved:</h2>
      <ul>
      <% @agent.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= yield f %>
  
  <div class="actions">
    <%= f.submit "Continue" %>
    or <%= link_to "skip this step", next_wizard_path %>
  </div>
<% end %>